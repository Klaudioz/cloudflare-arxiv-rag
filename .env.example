# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# AI Search Configuration
AI_SEARCH_NAME=arxiv-papers
AI_SEARCH_SYNC_INTERVAL_HOURS=6

# arXiv Configuration
# Comma-separated categories: cs.AI, cs.CV, cs.NE, cs.CL, cs.LG
ARXIV_CATEGORY=cs.AI,cs.CV,cs.NE,cs.CL,cs.LG
ARXIV_MAX_RESULTS=100
ARXIV_SEARCH_SCHEDULE=0 6 * * 1-5

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=100

# Cache
CACHE_TTL_SECONDS=86400
CACHE_ENABLED=true

# API Configuration
MAX_RESULTS_LIMIT=50
MAX_TOP_K_LIMIT=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Authentication
AUTH_ENABLED=true
API_KEYS=sk-test-key1,sk-test-key2
JWT_SECRET=your-jwt-secret-key-here
ADMIN_API_KEY=sk-admin-key

# Environment
ENVIRONMENT=production
DEBUG=false
